<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondop"
    tools:context=".MainActivity">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="2dp"
        android:focusable="true"
        android:fontFamily="@font/playregular"
        android:hint="@string/msc_Pasw"
        android:inputType="textPassword"
        android:minWidth="300dp"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/txtedt"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/txtedt"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/playbold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:text="@string/ttl_ssn"
        android:textColor="@color/gris"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext"
        android:clickable="false"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="2dp"
        android:focusable="true"
        android:fontFamily="@font/playregular"
        android:hint="@string/msc_User"
        android:minWidth="300dp"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/txtedt"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/txtedt"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnInicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/btnred"
        android:fontFamily="@font/playbold"
        android:minWidth="300dp"
        android:text="@string/ttl_Bttn"
        android:textColor="@color/txtedt"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClave" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>